<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="stylesheet" href="{{ '/css/materialize.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/github-markdown.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/coverimage.css' | url }}">
	  <link rel="me" href="https://fosstodon.org/@pandamakes">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
  </head>
  <body class="d-flex flex-column">
    {% include './header.njk' %}

    <main{% if templateClass %} class="{{ templateClass }} flex-basis-0 flex-grow-1"{% else %} class="flex-basis-0 flex-grow-1" {% endif %}>

      {% include './banner_image.njk' %}
      <div class="container">
        {{ content | safe }}
      </div>
    </main>

    {% include './footer.njk' %}
    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
